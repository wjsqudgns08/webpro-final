<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Student_SQL">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="studentSerarchVO" type="egovframework.student.StudentDefaultVO"/>
	
	<resultMap id="student" class="egovframework.student.StudentVO">
		<result property="number" column="number" columnIndex="1"/>
		<result property="name" column="name" columnIndex="2"/>
	</resultMap>
		
	<insert id="insert">
		<![CDATA[
			INSERT INTO student 
				( number
				  , name )
			VALUES ( #number#
				  , #name# )
		]]>
	</insert>

	<select id="select" resultMap="student">
		<![CDATA[
			SELECT
				number
				, name
			FROM student
			]]>
	</select>
</sqlMap>
